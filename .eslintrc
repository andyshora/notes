{
  "plugins": [
    "react",
    "require-jsdoc"
  ],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "settings": {
    "react": {
      "pragma": "React",
      "version": "15.0"
    }
  },
  "rules": {
    "indent": [2, 2, {"SwitchCase": 1}]
  },
  "globals": {
    "expectObservable": true,
    "hot": true,
    "cold": true,
    "__DEV__": false
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  }
}
